---
import Container from "../common/Container.astro";
import Section from "../common/Section.astro";
import SectionHeading from "../common/SectionHeading.astro";
import grid from "../../assets/Grid.svg"
import Image from "astro/components/Image.astro";

const sets = [
  {
    title: "Light Room",
    description: "A serene space where soft tones and gentle lighting create a spellbinding atmosphere.",
    image: "https://pixxelcity.com/wp-content/uploads/2024/05/Sumit-Zoting-photography-1.jpg",
    tags: ["Indoor", "Natural Light", "Modern"],
    availability: "Most Popular",
    price: "₹7,999/hour",
    size: "1200 sq.ft"
  },
  {
    title: "Mexican Street",
    description: "Vibrant and colorful setup inspired by the lively streets of Mexico.",
    image: "https://pixxelcity.com/wp-content/uploads/2024/05/Maxican-street-5.jpeg",
    tags: ["Outdoor", "Colorful", "Cultural"],
    availability: "New Addition",
    price: "₹8,999/hour",
    size: "2000 sq.ft"
  },
  {
    title: "Royale Touch",
    description: "Opulent setting fit for kings and queens, perfect for royal-themed shoots.",
    image: "https://pixxelcity.com/wp-content/uploads/2024/05/Royal-touch-5.jpeg",
    tags: ["Indoor", "Luxury", "Classic"],
    availability: "Limited Time",
    price: "₹12,999/hour",
    size: "1800 sq.ft"
  },
];
---

<Section class="relative bg-gradient-to-b from-gray-50 to-white">
  <!-- Refined background elements -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(var(--primary-rgb),0.03),transparent_70%)]"></div>
  <div class=`absolute inset-0 bg-[url('${grid}')] opacity-[0.9]`></div>
  

  <Container>
    <SectionHeading
      title="Signature Sets"
      subtitle="Step into worlds crafted for your perfect shot"
    />

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 lg:gap-10">
      {
        sets.map((set) => (
          <div class="group relative">
            <!-- Floating availability badge with smoother animation -->
            <div class="absolute -top-3 right-4 z-20 transform transition-all duration-500 ease-out group-hover:-translate-y-1">
              <span class="inline-flex items-center rounded-full bg-white/95 backdrop-blur px-3 py-1 text-xs font-medium text-primary shadow-md">
                {set.availability}
              </span>
            </div>

            <!-- Main card with refined shadows -->
            <div class="relative bg-white rounded-2xl overflow-hidden shadow-sm transition-all duration-700 ease-out hover:shadow-xl hover:-translate-y-1">
              <!-- Image section with smoother overlay -->
              <div class="aspect-[16/10] relative overflow-hidden">
                <Image
                width={400}
                height={500}
                  src={set.image}
                  alt={set.title}
                  class="h-full w-full object-cover transition-all duration-1000 ease-out group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-700 ease-in-out" />
                
                <!-- Refined quick info overlay -->
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-700 ease-out">
                  <div class="px-6 py-4 bg-white/95 backdrop-blur-sm rounded-xl transform translate-y-4 group-hover:translate-y-0 transition-transform duration-700 ease-out">
                    <div class="flex items-center gap-8 text-sm">
                      <span class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-primary/80" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                        </svg>
                        {set.size}
                      </span>
                      <span class="flex items-center gap-2 text-primary font-medium">
                        {set.price}
                      </span>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Refined content section -->
              <div class="p-7">
                <h3 class="text-xl font-display font-semibold text-gray-900 mb-2.5 transition-colors duration-300 group-hover:text-primary">
                  {set.title}
                </h3>
                <p class="text-gray-600 text-[15px] leading-relaxed mb-5 line-clamp-2">
                  {set.description}
                </p>

                <!-- Refined tags with smoother hover -->
                <div class="flex flex-wrap gap-2 mb-5">
                  {set.tags.map((tag) => (
                    <span class="inline-flex items-center rounded-full bg-gradient-to-r from-primary/5 via-primary/10 to-primary/5 px-3.5 py-1 text-xs font-medium text-primary/80 transition-all duration-300 hover:from-primary/10 hover:via-primary/15 hover:to-primary/10">
                      {tag}
                    </span>
                  ))}
                </div>

                <!-- Refined button with smoother transition -->
                <button class="w-full inline-flex items-center justify-center rounded-xl bg-secondary px-5 py-3 text-sm font-medium
                 text-secondary-foreground/80 transition-all duration-500 ease-out border border-primary/90 hover:bg-gradient-to-r hover:from-primary/90 hover:to-primary
                  hover:text-white group">
                  Book This Set
                  <svg class="w-4 h-4 ml-2 transform transition-transform duration-500 ease-out group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </button>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Refined bottom CTA -->
    <div class="mt-16 text-center">
      <a href="/sets" class="inline-flex items-center justify-center px-7 py-3.5 rounded-full bg-gradient-to-r from-primary/90 to-primary text-white text-sm font-medium transition-all duration-500 ease-out hover:shadow-lg hover:shadow-primary/20 hover:-translate-y-0.5">
        Explore All Sets
        <svg class="w-4 h-4 ml-2 transition-transform duration-500 ease-out group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </Container>
</Section>

<style>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Optional: Add custom hover animation for cards */
  @keyframes floatUp {
    0% { transform: translateY(0); }
    100% { transform: translateY(-8px); }
  }
</style>