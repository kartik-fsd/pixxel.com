---
import Container from "../common/Container.astro";
import Section from "../common/Section.astro";
import SectionHeading from "../common/SectionHeading.astro";
import grid from "../../assets/Grid.svg"
import { Image } from "astro:assets";


const sets = [
  {
    title: "Crimson Grace",
    description: "With its lush greenery, modern architecture, and serene ambiance, perfect for capturing the magic of your love story.",
    caption: "Crimson Grace photography set at Pixxel City Nagpur - Elegant outdoor backdrop with modern design and lush greenery for premium photoshoots in Nagpur",
    image: "https://ik.imagekit.io/c54qkthzl/Crimson-grace.jpg",
    tags: ["Outdoor", "Modern", "Elegant"],
    availability: "Most Popular"
  },
  {
    title: "Blue Jodhpur",
    description: "Inspired by the iconic blue city of Jodhpur, featuring stunning azure walls with intricate white motifs.",
    caption: "Blue Jodhpur themed photography set at Pixxel City Nagpur - Cultural backdrop with azure walls and white motifs for professional portrait sessions in Nagpur",
    image: "https://ik.imagekit.io/c54qkthzl/Blue-Jodhpur-6.jpg",
    tags: ["Outdoor", "Cultural", "Vibrant"],
    availability: "Customer Favorite"
  },
  {
    title: "Date Night",
    description: "A beautifully lit canopy adorned with twinkling fairy lights, creating a magical romantic atmosphere.",
    caption: "Date Night romantic photography set at Pixxel City Nagpur - Intimate setup with canopy and fairy lights for couples photoshoots in Nagpur's premium studio",
    image: "https://ik.imagekit.io/c54qkthzl/Date-Night-3.JPG",
    tags: ["Indoor", "Romantic", "Intimate"],
    availability: "Limited Time"
  }
];
---

<Section class="relative bg-gradient-to-b from-gray-50 to-white">
  <!-- Refined background elements with pointer-events: none -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,rgba(var(--primary-rgb),0.03),transparent_70%)] pointer-events-none"></div>
  <div class=`absolute inset-0 bg-[url('${grid}')] opacity-[0.9] pointer-events-none`></div>
  
  <Container>
    <SectionHeading
      title="Signature Sets"
      subtitle="Step into worlds crafted for your perfect shot"
    />

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-10">
      {
        sets.map((set) => (
          <div class="group relative">
            <!-- Floating availability badge with smoother animation -->
            <div class="absolute -top-3 right-4 z-20 transform transition-all duration-500 ease-out group-hover:-translate-y-1 pointer-events-none">
              <span class="inline-flex items-center rounded-full bg-white/95 backdrop-blur px-3 py-1 text-xs font-medium text-primary shadow-md">
                {set.availability}
              </span>
            </div>

            <!-- Main card with refined shadows -->
            <div class="relative bg-white rounded-2xl overflow-hidden shadow-sm transition-all duration-700 ease-out hover:shadow-xl hover:-translate-y-1">
              <!-- Image section with smoother overlay -->
              <div class="aspect-[16/10] relative overflow-hidden">
                <Image
                width={400}
                height={250}
                  src={set.image}
                  alt={set.caption}
                  class="h-full w-full object-cover transition-all duration-1000 ease-out group-hover:scale-105"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-all duration-700 ease-in-out pointer-events-none" />
              </div>

              <!-- Refined content section -->
              <div class="p-7">
                <h3 class="text-xl font-display font-semibold text-gray-900 mb-2.5 transition-colors duration-300 group-hover:text-primary">
                  {set.title}
                </h3>
                <p class="text-gray-600 text-[15px] leading-relaxed mb-5 line-clamp-2">
                  {set.description}
                </p>

                <!-- Refined tags with smoother hover -->
                <div class="flex flex-wrap gap-2 mb-5">
                  {set.tags.map((tag) => (
                    <span class="inline-flex items-center rounded-full bg-gradient-to-r from-primary/5 via-primary/10 to-primary/5 px-3.5 py-1 text-xs font-medium text-primary/80 transition-all duration-300 hover:from-primary/10 hover:via-primary/15 hover:to-primary/10">
                      {tag}
                    </span>
                  ))}
                </div>

                <!-- Changed to an anchor tag with proper href -->
                <a 
                  href={`/venues/${set.title.toLowerCase().replace(/\s+/g, '-')}`}
                  class="w-full inline-flex items-center justify-center rounded-xl bg-secondary px-5 py-3 text-sm font-medium
                  text-secondary-foreground/80 transition-all duration-500 ease-out border border-primary/90 hover:bg-gradient-to-r hover:from-primary/90 hover:to-primary
                  hover:text-white group cursor-pointer z-10"
                >
                  View this Set
                  <svg class="w-4 h-4 ml-2 transform transition-transform duration-500 ease-out group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>

    <!-- Refined bottom CTA with multiple approaches -->
    <div class="mt-16 text-center">
      <!-- Standard approach with correct attributes -->
      <a 
        href={`/venues`}
        class="venues-link inline-flex items-center justify-center px-7 py-3.5 rounded-full bg-gradient-to-r from-primary/90 to-primary text-white text-sm font-medium transition-all duration-500 ease-out hover:shadow-lg hover:shadow-primary/20 hover:-translate-y-0.5 cursor-pointer z-50"
      >
        Explore All Sets
        <svg class="w-4 h-4 ml-2 transition-transform duration-500 ease-out group-hover:translate-x-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </Container>
</Section>

<style>
  /* Smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Add this to ensure proper event handling */
  a, button {
    position: relative;
    z-index: 10;
  }

  /* Make sure pointer events work */
  .venues-link {
    cursor: pointer !important;
    position: relative !important;
    z-index: 50 !important;
  }

  /* Optional: Add custom hover animation for cards */
  @keyframes floatUp {
    0% { transform: translateY(0); }
    100% { transform: translateY(-8px); }
  }
</style>