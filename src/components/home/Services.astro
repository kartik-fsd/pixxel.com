---
import Container from "../common/Container.astro";
import Section from "../common/Section.astro";
import SectionHeading from "../common/SectionHeading.astro";
import { SERVICES } from "../../utils/constants";
import Image from "astro/components/Image.astro";
---

<Section class="relative overflow-hidden bg-gradient-to-b from-white via-gray-50/50 to-white">
  <div class=`absolute inset-0 bg-[url('https://www.toptal.com/designers/subtlepatterns/uploads/moroccan-flower.png')] opacity-[0.03]`></div>
  
  <Container>
    <SectionHeading
      title="Our Services"
      subtitle="Crafting unforgettable moments in breathtaking spaces"
    />

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-10">
      {
        SERVICES.map((service) => (
          <div class="group relative">
            <!-- Image Container with Overlay -->
            <div class="aspect-[4/3] mb-6 relative overflow-hidden rounded-2xl">
              <Image
                src={service.image}
                alt={service.title}
                width={400}
                height={500}
                class="object-cover w-full h-full transform group-hover:scale-105 transition-transform duration-700"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-black/20 to-transparent opacity-60"></div>
              
              <!-- Floating Service Icon -->
              <div class="absolute bottom-4 right-4 h-12 w-12 rounded-full bg-white/90 backdrop-blur-sm flex items-center justify-center shadow-lg">
                <service.icon className="h-6 w-6 text-primary/80" />
              </div>
              
              <!-- Small Image Gallery Preview -->
              <div class="absolute bottom-4 left-4 flex -space-x-2">
                {[1, 2, 3].map((_, index) => (
                  <div class="w-8 h-8 rounded-full border-2 border-white overflow-hidden">
                    <img
                      src={`https://avatar.iran.liara.run/public/${index + 1}`}
                      alt=""
                      class="w-full h-full object-cover"
                    />
                  </div>
                ))}
                <div class="w-8 h-8 rounded-full border-2 border-white bg-black/50 backdrop-blur-sm flex items-center justify-center text-xs text-white">
                  +5
                </div>
              </div>
            </div>

            <!-- Content Card -->
            <div class="relative p-6 rounded-xl bg-white border border-gray-100/80 shadow-sm">
              <!-- Title and Description -->
              <h3 class="font-display text-xl text-gray-800 font-medium mb-3">
                {service.title}
              </h3>
              
              <p class="text-gray-600 text-sm leading-relaxed mb-4">
                {service.description}
              </p>

              <!-- Features with Elegant Icons -->
              <ul class="space-y-2.5">
                {service.features.map((feature) => (
                  <li class="flex items-center text-sm text-gray-500">
                    <div class="w-4 h-4 mr-3 rounded-full bg-primary/5 flex items-center justify-center">
                      {/* <div class="w-1.5 h-1.5 rounded-full bg-primary/40"></div> */}
                      <span class="text-gold text-xl">âœ¦</span>
                    </div>
                    {feature}
                  </li>
                ))}
              </ul>

              <!-- Learn More Link -->
              <div class="mt-6 pt-4 border-t border-gray-100">
                <a href={`/services/${service.slug}`} class="inline-flex items-center text-sm text-primary/80 hover:text-primary transition-colors">
                  Learn More
                  <svg class="w-4 h-4 ml-1 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</Section>