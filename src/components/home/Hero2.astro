---
import { Camera, ArrowRight } from "lucide-react";
import { COMPANY } from "../../utils/constants";
import Container from "../common/Container.astro";
import ImageMarquee from "../../components/home/Marquee";
import { HomeStatsSection } from "./animatedStats";
import { VideoHero } from "../../components/home/VideoComponent";

// Image dimensions
const MARQUEE_IMAGE_WIDTH = 400;
const MARQUEE_IMAGE_HEIGHT = 300;

// Video configuration
const heroVideo = {
  src: "https://ik.imagekit.io/c54qkthzl/pixxelcity-nagpur.mp4", // Update with your actual video path
  poster: "https://ik.imagekit.io/c54qkthzl/London-Street-5.jpg",
  alt: "Featured Photography & Videography",
};

// Images for the marquee
const marqueeImages = [
  {
    src: "https://ik.imagekit.io/c54qkthzl/retro-studio-baby_shoot.jpg",
    alt: "Baby Photography",
    category: "baby-shoot",
    width: MARQUEE_IMAGE_WIDTH,
    height: MARQUEE_IMAGE_HEIGHT,
  },
  {
    src: "https://ik.imagekit.io/c54qkthzl/Kitchen.JPG",
    alt: "Pre-wedding Shoot",
    category: "Pre-Wedding",
    width: MARQUEE_IMAGE_WIDTH,
    height: MARQUEE_IMAGE_HEIGHT,
  },
  {
    src: "https://ik.imagekit.io/c54qkthzl/Santorini-brand-shoot.jpg",
    alt: "brand Shoot",
    category: "brand shoot",
    width: MARQUEE_IMAGE_WIDTH,
    height: MARQUEE_IMAGE_HEIGHT,
  },
];
---

<section class="relative overflow-hidden bg-background py-6 lg:py-10">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>

  <Container>
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Content Side -->
      <div class="relative z-10 space-y-8">
        <!-- Studio Badge -->
        <div
          class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 text-primary"
        >
          <Camera className="h-4 w-4" />
          <span class="text-sm font-medium">{COMPANY.tagline}</span>
        </div>

        <!-- Main Content -->
        <div class="space-y-6">
          <h1
            class="text-4xl sm:text-5xl md:text-6xl font-display font-bold tracking-tight"
          >
            <span class="block text-primary">Capture Your</span>
            <span
              class="block bg-gradient-to-r from-primary to-primary/60 bg-clip-text text-transparent"
            >
              Perfect Moments
            </span>
          </h1>
          <p class="text-lg text-muted-foreground max-w-lg">
            {COMPANY.description}
          </p>
        </div>

        <!-- CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 pb-4">
          <a
            href="/contact-us"
            class="inline-flex items-center justify-center rounded-md bg-primary px-6 py-3 text-base font-medium text-primary-foreground transition-colors hover:bg-primary/90 group"
          >
            Book Your Shoot
            <ArrowRight
              className="h-5 w-5 ml-2 transition-transform group-hover:translate-x-1"
            />
          </a>
          <a
            href="/venues"
            class="inline-flex items-center justify-center rounded-md border border-input bg-background px-6 py-3 text-base font-medium transition-colors hover:bg-accent hover:text-accent-foreground"
          >
            Explore Venues
          </a>
        </div>

        <!-- Stats -->
        <HomeStatsSection client:load />
      </div>

      <!-- Image Gallery Side with Video Hero -->
      <div class="relative">
        <!-- Video Hero Component -->
        <VideoHero
          videoSrc={heroVideo.src}
          posterImage={heroVideo.poster}
          alt={heroVideo.alt}
          client:load
        />

        <!-- Marquee Component -->
        <ImageMarquee images={marqueeImages} client:load />

        <!-- Decorative Elements -->
        <div
          class="absolute -top-8 -right-8 w-64 h-64 bg-primary/5 rounded-full blur-3xl"
        >
        </div>
        <div
          class="absolute -bottom-8 -left-8 w-64 h-64 bg-primary/5 rounded-full blur-3xl"
        >
        </div>
      </div>
    </div>
  </Container>

  <!-- Decorative Border -->
  <div
    class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-transparent via-border to-transparent"
  >
  </div>
</section>

<style>
  .bg-grid-pattern {
    background-size: 30px 30px;
    background-image: linear-gradient(
        to right,
        hsl(var(--primary) / 0.1) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, hsl(var(--primary) / 0.1) 1px, transparent 1px);
  }
</style>
