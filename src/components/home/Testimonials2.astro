];
---

<Container class="pb-4">
  {/* Section Header */}
  <div class="max-w-7xl mx-auto text-center mb-16">
    <SectionHeading
      title="Client Stories"
      subtitle="Creating timeless memories with our cherished clients"
    />
  </div>
  <section class="relative">
    <TestimonialSection client:load testimonials={testimonials} />
  </section>
</Container>
