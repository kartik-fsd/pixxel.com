import Container from "../common/Container.astro";
import SectionHeading from "../common/SectionHeading.astro";
import TestimonialSection from "./TestimonialSlider";

const testimonials = [
  {
    name: "Komal Fating",
    role: "Pre-Wedding Client",
    content:
      "I went to pixel city for my pre-wedding shoot. All the sets are really amazing. There are different kinds of sets like cultural, coffee dates, romantic glass house and many more. I tried few dresses as well. We had an amazing experience at pixel city.",
