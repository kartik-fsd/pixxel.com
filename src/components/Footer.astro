---
import { Camera, Facebook, Instagram, Mail, MapPin, Phone } from "lucide-react";
import { CONTACT, COMPANY } from "../utils/constants";
---

<footer class="bg-background border-t">
  <div class="container mx-auto px-4 py-12 md:py-16">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-4">
      <div class="space-y-4">
        <a href="/" class="flex items-center space-x-2">
          <Camera className="h-6 w-6" />
          <span class="text-xl font-bold font-display">{COMPANY.name}</span>
        </a>
        <p class="text-sm text-muted-foreground">
          {COMPANY.description}
        </p>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4 font-display">Quick Links</h3>
        <nav class="flex flex-col space-y-2">
          <a href="/" class="text-sm text-muted-foreground hover:text-primary"
            >Home</a
          >
          <a
            href="/services"
            class="text-sm text-muted-foreground hover:text-primary">Services</a
          >
          <a
            href="/venues"
            class="text-sm text-muted-foreground hover:text-primary">Venues</a
          >
          <a
            href="/packages"
            class="text-sm text-muted-foreground hover:text-primary">Packages</a
          >
          <a
            href="/terms"
            class="text-sm text-muted-foreground hover:text-primary"
            >Terms & Conditions</a
          >
        </nav>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4 font-display">Contact Us</h3>
        <div class="space-y-2">
          <a
            href={`tel:${CONTACT.phone}`}
            class="flex items-center space-x-2 text-sm text-muted-foreground hover:text-primary"
          >
            <Phone className="h-4 w-4" />
            <span>+91 {CONTACT.phone}</span>
          </a>
          <a
            href={`mailto:${CONTACT.email}`}
            class="flex items-center space-x-2 text-sm text-muted-foreground hover:text-primary"
          >
            <Mail className="h-4 w-4" />
            <span>{CONTACT.email}</span>
          </a>
          <div class="flex items-start space-x-2 text-sm text-muted-foreground">
            <MapPin className="h-4 w-4 mt-1 flex-shrink-0" />
            <span>{CONTACT.address}</span>
          </div>
        </div>
      </div>

      <div>
        <h3 class="text-lg font-semibold mb-4 font-display">Follow Us</h3>
        <div class="flex space-x-4">
          <a
            href={CONTACT.social.instagram}
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-primary"
          >
            <Instagram className="h-5 w-5" />
          </a>
          <a
            href={CONTACT.social.facebook}
            target="_blank"
            rel="noopener noreferrer"
            class="text-muted-foreground hover:text-primary"
          >
            <Facebook className="h-5 w-5" />
          </a>
        </div>
      </div>
    </div>

    <div class="mt-8 pt-8 border-t text-center text-sm text-muted-foreground">
      <p>
        &copy; {new Date().getFullYear()}
        {COMPANY.name}. All rights reserved.
      </p>
    </div>
  </div>
</footer>
