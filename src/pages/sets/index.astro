---
import { ProcessSection } from "../../components/section/ProcessSection";
import { StatsSection } from "../../components/section/StatsSection";
import MainLayout from "../../layouts/MainLayout.astro";
import { SetsGrid } from "../../components/section/SetsGrid";
import { venueSEO } from "../../SEO/venueSEO";
import { sets, categories } from "../../data/setsList.json";
import { featuredSets } from "../../data/featuredSets.json";
import { CTASection, CTAStyles } from "../../components/section/CTASection";
---

<MainLayout seo={venueSEO}>
  <SetsGrid
    client:load
    sets={sets}
    categories={categories}
    featuredSets={featuredSets}
  />

  <!-- Add a divider with wave pattern -->
  <div class="relative h-24 overflow-hidden bg-transparent">
    <div class="absolute w-full h-full">
      <svg
        class="absolute bottom-0 w-full h-24 text-background"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 1440 320"
        preserveAspectRatio="none"
      >
        <path
          fill="currentColor"
          fill-opacity="1"
          d="M0,96L60,112C120,128,240,160,360,160C480,160,600,128,720,117.3C840,107,960,117,1080,133.3C1200,149,1320,171,1380,181.3L1440,192L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"
        ></path>
      </svg>
    </div>
  </div>

  <StatsSection client:visible />

  <!-- Add a testimonial banner -->
  <div
    class="relative bg-gradient-to-r from-primary to-primary/80 py-16 overflow-hidden"
  >
    <div class="absolute inset-0 opacity-10">
      <div class="absolute -top-20 -left-20 w-96 h-96 rounded-full bg-white">
      </div>
      <div class="absolute top-40 -right-32 w-64 h-64 rounded-full bg-white">
      </div>
      <div class="absolute -bottom-20 left-1/3 w-80 h-80 rounded-full bg-white">
      </div>
    </div>

    <div
      class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10 text-center"
    >
      <div
        class="inline-flex items-center justify-center p-2 bg-white/20 backdrop-blur-sm rounded-full mb-4"
      >
        <span class="text-sm font-medium text-white">What Our Clients Say</span>
      </div>
      <h2 class="text-4xl font-bold text-white mb-10 max-w-2xl mx-auto">
        "The photography sets at Pixxel City are absolutely breathtaking. Our
        photoshoot was a dream come true!"
      </h2>

      <div class="flex flex-wrap justify-center gap-4 mt-8">
        <img
          src="https://randomuser.me/api/portraits/women/15.jpg"
          alt="Client"
          class="w-12 h-12 rounded-full border-2 border-white"
        />
        <img
          src="https://randomuser.me/api/portraits/men/77.jpg"
          alt="Client"
          class="w-12 h-12 rounded-full border-2 border-white"
        />
        <img
          src="https://randomuser.me/api/portraits/women/8.jpg"
          alt="Client"
          class="w-12 h-12 rounded-full border-2 border-white"
        />
        <img
          src="https://randomuser.me/api/portraits/men/58.jpg"
          alt="Client"
          class="w-12 h-12 rounded-full border-2 border-white"
        />
        <img
          src="https://randomuser.me/api/portraits/women/22.jpg"
          alt="Client"
          class="w-12 h-12 rounded-full border-2 border-white"
        />
        <div
          class="w-12 h-12 rounded-full bg-white/20 backdrop-blur-sm flex items-center justify-center text-white font-medium"
        >
          50+
        </div>
      </div>
    </div>
  </div>

  <ProcessSection client:load />

  <CTASection client:load />
  <CTAStyles client:load />
</MainLayout>
